---
import { ClientRouter } from "astro:transitions";
import ThemeToggle from "../components/ThemeToggle.astro";
import { getThemeScript } from "../scripts/theme";
import { getAnalyticsScript } from "../scripts/analytics";
import "../styles/globals.css";

// Import font files with ?url to get hashed URLs for preloading
import latinNormal from "@fontsource-variable/newsreader/files/newsreader-latin-wght-normal.woff2?url";

interface Props {
  title?: string;
  description?: string;
  type?: "website" | "article";
}

const {
  title = "Eric Minassian",
  description = "Software engineer at Amazon, working on Project Kuiper. Previously at Walmart. Studying CS + Business at UC Irvine.",
  type = "website",
} = Astro.props;

const siteUrl = "https://www.ericminassian.com";
const canonicalUrl = new URL(Astro.url.pathname, siteUrl).toString();
const ogImage = `${siteUrl}/og-image.png`;
const ga4Id = "G-YWLR571NDY";

// JSON-LD structured data
const jsonLd = {
  "@context": "https://schema.org",
  "@type": "Person",
  name: "Eric Minassian",
  url: siteUrl,
  jobTitle: "Software Engineer",
  worksFor: {
    "@type": "Organization",
    name: "Amazon",
  },
  sameAs: [
    "https://github.com/eric-minassian",
    "https://linkedin.com/in/minassian-eric",
  ],
};
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      rel="preload"
      as="font"
      type="font/woff2"
      href={latinNormal}
      crossorigin="anonymous"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="author" content="Eric Minassian" />
    <link rel="canonical" href={canonicalUrl} />

    <!-- Open Graph -->
    <meta property="og:type" content={type} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:site_name" content="Eric Minassian" />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <!-- Theme -->
    <meta
      name="theme-color"
      content="#f8f5ed"
      media="(prefers-color-scheme: light)"
    />
    <meta
      name="theme-color"
      content="#171717"
      media="(prefers-color-scheme: dark)"
    />

    <!-- JSON-LD -->
    <script is:inline type="application/ld+json" set:html={JSON.stringify(jsonLd)} />

    <!-- Google Analytics 4 -->
    <script is:inline async src={`https://www.googletagmanager.com/gtag/js?id=${ga4Id}`}></script>
    <script is:inline set:html={getAnalyticsScript(ga4Id)} />

    <ClientRouter />
    <!-- Prevent FOUC: Apply dark class before render -->
    <script is:inline set:html={getThemeScript()}></script>
    <!-- Theme toggle logic -->
    <script>
      import { initTheme } from "../scripts/theme";
      initTheme();
    </script>
    <!-- Analytics initialization -->
    <script>
      import { initAnalytics } from "../scripts/analytics";
      initAnalytics();
    </script>
  </head>

  <body class="mx-auto max-w-[650px] px-8 py-16">
    <main class="w-full mt-0 md:mt-16">
      <slot />
    </main>
    <footer class="mt-16 flex justify-center">
      <ThemeToggle />
    </footer>
  </body>
</html>
